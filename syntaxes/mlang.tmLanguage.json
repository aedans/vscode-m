{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "M Language",
	"patterns": [{ "include": "#expression" }],
	"repository": {
		"expression": {
			"patterns": [
				{
					"include": "#macro-expression"
				},
				{
					"include": "#list-expression"
				},
				{
					"include": "#nil-expression"
				},
				{
					"include": "#symbol-expression"
				},
				{
					"include": "#symbol-literal-expression"
				},
				{
					"include": "#comment"
				}
			]
		},
		"nil-expression": {
			"patterns": [{
				"name": "keyword.mlang",
				"match": "\\([ \t\r\n]*\\)"
			}]
		},
		"list-expression": {
			"begin": "(\\()([ \t\r\n]*[^ \t\r\n\";\\(\\)]+)",
			"end": "\\)",
			"beginCaptures": {
				"1": { "name": "punctuation.bracket.round" },
				"2": { "name": "keyword.mlang" }
			},
			"endCaptures": {
				"0": { "name": "punctuation.bracket.round" }
			},
			"name": "expression.group",
			"patterns": [{ "include": "#expression" }]
		},
		"symbol-expression": {
			"patterns": [{
				"name": "variable.other.mlang",
				"match": "[^ \t\r\n\";\\(\\)]+"
			}]
		},
		"symbol-literal-expression": {
			"name": "string.quoted.double.mlang",
			"begin": "\"",
			"end": "\"",
			"patterns": [{
				"name": "constant.character.escape.mlang",
				"match": "\\\\."
			}]
		},
		"comment": {
			"patterns": [{
				"name": "comment.line.mlang",
				"match": ";+.*"
			}]
		}
	},
	"scopeName": "source.m"
}